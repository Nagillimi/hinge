    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build Local Library",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/scripts/build-local.sh",
            "cwd": "${cwd}"
        },
        {
            "name": "Run Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/scripts/test.sh",
            "cwd": "${cwd}"
        },
        {
            "name": "Deploy to TestPyPi",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/scripts/deploy.sh",
            "cwd": "${cwd}"
        },
        {
            "name": "Run with Serial Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/serial_test.py",
            "console": "externalTerminal",
            "justMyCode": true
        },
        {
            "name": "Open Virtual Env",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/scripts/open-venv.sh",
            "cwd": "${cwd}"
        }
    ]
}